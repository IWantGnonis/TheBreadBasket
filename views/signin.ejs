<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>TheBreadBasket</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />

    <style>
.form-container{
    background-color: #543310;
    width: 80%;
    height: 600px;
    position: fixed;
    z-index: 9;
    left: 144.217;
    background-image: url(/Images/bread-l.jpg);
    background-size:100% ;
    color: #F8F4E1;
}

@font-face {
    font-family: brand ;
    src: url("../Font/Brand.ttf");
}
.title1{
    font-family: brand;
    text-align: center;
    color: #F8F4E1;

}
.email1-line{

    background-color: #F8F4E1;
}
.text-log{
    color: #F8F4E1;
}
body{
    background-color: #F8F4E1;
}
.btn{
    color: #543310;
}
.logbtn{
    background-color: #AF8F6F;
    color: #F8F4E1;
}
.close-btn:hover{
    transition: 1s;
    background-color: #AF8F6F;
}
.message-container {
      position: fixed;
      top: 1rem;
      right: 1rem;
      z-index: 1000;
      max-width: 300px;
      width: 90%;
    }

    .message {
      padding: 0.75rem 1rem;
      border-radius: 6px;
      margin-bottom: 0.5rem;
      font-size: 0.875rem;
      box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
      animation: slideInRight 0.3s ease-in-out;
    }

    .error-message {
      background-color: #FEE2E2;
      border-left: 4px solid #DC2626;
      color: #DC2626;
    }

    .success-message {
      background-color: #DCFCE7;
      border-left: 4px solid #16A34A;
      color: #16A34A;
    }

    @keyframes slideInRight {
      from {
        transform: translateX(100%);
        opacity: 0;
      }
      to {
        transform: translateX(0);
        opacity: 1;
      }
    }
    </style>
</head>
<body class="overflow-x-hidden">
    <div class="w-full h-full flex justify-center items-center ">
        <div id="myForm" class="form-container  rounded-xl select-none my-14 ">
            <div class="pl-16 w-3/6 h-full">
                <div class="title1 flex justify-start pt-10">
                    <div>
                        <h3 class="text-4xl font-bold">THE BREAD</h3>
                        <div class="text-4xl font-bold">BASKET</div>
                    </div>
                </div> 
                <div class="log font-extralight pl-4 pt-5 text-4xl">
                    <h1>LOGIN</h1>
                </div>
                <div class="text-log ml-4 mt-2 text-xl">
                    Sign in with your email address and Password
                </div>
                <div class="message-container">
                    <!-- Display error message if present -->
                    <% if (error) { %>
                      <div class="message error-message">
                        <%= error %>
                      </div>
                    <% } %>
                
                    <!-- Display success message if present -->
                    <% if (success) { %>
                      <div class="message success-message">
                        <%= success %>
                      </div>
                    <% } %>
                  </div>
                <form action="/signin" method="post">
                    <div class="ml-4 mt-16">
                        <input type="email"name="email" id="email" placeholder="Email address" class="border-none w-52 bg-transparent placeholder:text-inherit outline-none">
                        <div class="email1-line mt-2 h-px rounded-xl w-60"></div>
                    </div>
                    <div class="ml-4 mt-5">
                        <input type="password" name="password" id="password" placeholder="Password" class="border-none w-52 bg-transparent placeholder:text-inherit outline-none">
                        <div class="email1-line mt-2 h-px rounded-xl w-60"></div>
                    </div>
                    <div class="flex flex-row">
                        
                        <div class=" ml-4 mt-5 ">
                            <input class="logbtn px-14 text-center py-2 rounded-xl" type="submit" value="Sign In" />
                        </div>
                        
                            <div class="text-log ml-4 mt-5 text-lg ">
                                <button class="logbtn px-10 text-center py-1.5 rounded-xl" formaction="/signup" formmethod="get">Sign up</button>
                            </div>
                            
              
                    </div>
                </form>
            </div>
        </div>
</body>
        </div>
    </div>


</body>
</html>
